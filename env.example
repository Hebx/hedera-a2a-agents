# Hedera Testnet Configuration
# Copy this file to .env and replace these values with your actual Hedera testnet account credentials

# Your Hedera account ID (e.g., 0.0.123456)
HEDERA_ACCOUNT_ID=0.0.123456

# Your Hedera private key (ED25519 format)
# This should be a 32-byte private key in hex format
# Example: 302e020100300506032b657004220420...
HEDERA_PRIVATE_KEY=your_private_key_here

# Agent Credentials (will be populated by register-agents.ts)
# ANALYZER_AGENT_ID=
# ANALYZER_TOPIC_ID=
# ANALYZER_PRIVATE_KEY=
# VERIFIER_AGENT_ID=
# VERIFIER_TOPIC_ID=
# VERIFIER_PRIVATE_KEY=
# SETTLEMENT_AGENT_ID=
# SETTLEMENT_TOPIC_ID=
# SETTLEMENT_PRIVATE_KEY=

# Settlement Agent Configuration
# Base Sepolia RPC URL for Ethereum transactions
BASE_RPC_URL=https://sepolia.base.org

# Settlement wallet private key (for Ethereum/Base Sepolia transactions)
SETTLEMENT_WALLET_PRIVATE_KEY=your_settlement_wallet_private_key_here

# USDC contract address on Base Sepolia
USDC_CONTRACT=0x036CbD53842c5426634e7929541eC2318f3dCF7e

# Merchant wallet address to receive payments
MERCHANT_WALLET_ADDRESS=0x1234567890123456789012345678901234567890

# X402 Payment Configuration
# Payment network: 'base-sepolia' for USDC or 'hedera-testnet' for HBAR
PAYMENT_NETWORK=base-sepolia
HEDERA_MERCHANT_ACCOUNT_ID=0.0.XXXXXX
HBAR_PAYMENT_AMOUNT=10
